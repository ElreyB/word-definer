<body class="">
  <a href="/"><button class="btn">Home</button></a>
  <h3><%= @word.word %></h3>
    <ol>
      <% @word.definition.each do |definition| %>
        <% if definition != ""%>
          <li><%= definition %></li>
        <% end %>
      <% end %>
    </ol>

  <h2>Add a definition to word:</h2>
  <div class="hide error">
    <h4 id="input">Input Error</h4>
  </div>
  <br>
  <form action="/word/<%= @word.word %>" method="post">
    <div class="form-group">
      <input type="text" name="definition" class="form-control">
    </div>
    <button type="submit" class="btn define">Add Definition</button>
  </form>
</body>
