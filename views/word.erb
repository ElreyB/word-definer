<% if @word.photo != "" %>
  <style>
    body {background-image: url("<%= @word.photo %>");}
  </style>
<% end %>
<body class="word">
  <a href="/"><button class="btn">Home</button></a>
  <h3><%= @word.word %></h3>
    <ol>
      <% @word.definition.each do |definition| %>
        <% if definition != ""%>
          <li><%= definition %></li>
        <% end %>
      <% end %>
    </ol>

  <h2>Add a definition to word:</h2>
  <div class="hide error">
    <h4>Input Error</h4>
  </div>
  <br>
  <form action="/word/<%= @word.word %>" method="post">
    <div class="row">
      <div class="form-group col-xs-7">
        <input type="text" name="definition" class="form-control">
      </div>
      <div class="col-xs-3">
        <button type="submit" class="btn define">Add Definition</button>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-xs-7">
        <input type="text" name="photo" class="form-control">
      </div>
      <div class="col-xs-3">
        <button type="submit" class="btn photo">Add Photo</button>
      </div>
    </div>
  </form>
</body>
