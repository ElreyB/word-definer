
<body class="alphabetize">
  <a href="/instructions"><button class="btn instruction-home btn-block">Instruction</button></a>
  <h1>Your Dictionary</h1>
  <div class="dictionary-container">
    <ul>
      <% @words.each do |word, define| %>
        <li><h3><%= word %></h3></li>
        <ol>
          <% define.definition.each do |definition| %>
            <% if definition != ""%>
              <li><%= definition %></li>
            <% end %>
          <% end %>
        </ol>
      <% end %>
    </ul>
  </div>
  <hr>
  <div class="row">
    <div class="col-xs-3">
      <a href="/"><button class="btn">Home</button></a>
    </div>
    <div class="col-xs-4">
      <button class="btn search">Search Dictionary</button>
    </div>
    <div class="col-xs-5">
      <a href="/all"><button class="btn">Words and Definitions</button></a>
    </div>
  </div>
</body>
