<h2>Words currently in your dictionary:</h2>
<div class="list_container">
  <ul>
    <% @words.each do |word, definition| %>
      <li><a href="/word/<%= word %>"><%= word %></a></li>
    <% end %>
  </ul>
</div>
<br>
<a href="/all"><button class="btn">View all words and definition</button></a>
<a href="/alphabetize"><button class="btn">View all words and definition alphabetized</button></a>

<br>
<div class="hide error">
  <h3>Input Error</h3>
</div>

<h2>Add word to dictionary</h2>
<form action="/" method="post">
  <div class="form-group">
    <input id="add_word" type="text" name="add_word" class="form-control">
  </div>
  <button type="submit" class="btn add">Add to List</button>
</form>
<h2>Delete word to dictionary</h2>
<form action="/delete" method="post">
  <div class="form-group">
    <input id="delete_word" type="text" name="delete_word" class="form-control">
  </div>
  <button type="submit" class="btn delete">Delete from List</button>
</form>
